{% stylesheet %}
  .footer {
    background: #f5f5f5;
    padding: 40px 20px;
    text-align: center;
    margin-top: 60px;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-contact {
    margin-bottom: 20px;
  }

  .footer-business-name {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .footer-contact-info {
    font-size: 14px;
    margin: 0;
  }

  .footer-contact-info a {
    color: #000;
    text-decoration: none;
  }

  .footer-contact-info a:hover {
    color: #0066cc;
    text-decoration: underline;
  }

  .footer-contact-info .separator {
    margin: 0 10px;
    color: #999;
  }

  .footer-copyright {
    font-size: 13px;
    color: #666;
    margin: 0;
    padding-top: 20px;
    border-top: 1px solid #ddd;
  }
{% endstylesheet %}

