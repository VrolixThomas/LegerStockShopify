{% comment %}
  Custom Size Calculator Section

  This section can be added to product pages through the theme editor.
  It renders the metal price calculator for custom size pricing.
{% endcomment %}

<div class="calculator-page-wrapper">
  <div class="calculator-page-container">
    {% if section.settings.heading != blank %}
      <div class="calculator-section-header">
        <h1 class="calculator-section-title">{{ section.settings.heading }}</h1>
        {% if section.settings.subheading != blank %}
          <p class="calculator-section-subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% render 'metal-price-calculator' %}
  </div>
</div>

<style>
  .calculator-page-wrapper {
    min-height: calc(100vh - 200px);
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    padding: 40px 20px;
  }

  .calculator-page-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .calculator-section-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .calculator-section-title {
    font-size: 42px;
    font-weight: 800;
    margin: 0 0 16px 0;
    color: #0f172a;
    letter-spacing: -0.5px;
  }

  .calculator-section-subtitle {
    font-size: 18px;
    color: #64748b;
    margin: 0;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .calculator-page-wrapper {
      padding: 24px 16px;
    }

    .calculator-section-title {
      font-size: 28px;
    }

    .calculator-section-subtitle {
      font-size: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Size Calculator",
  "tag": "section",
  "class": "custom-size-calculator-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Need a Custom Size?"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Calculate the price for your exact dimensions instantly"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Custom Size Calculator",
      "category": "Custom"
    }
  ]
}
{% endschema %}
