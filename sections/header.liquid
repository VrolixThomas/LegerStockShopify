<header class="site-header">
  <div class="header-content">
    <div class="header-logo">
      <a href="https://legerstockhendriks.be" target="_blank" rel="noopener noreferrer">
        <img src="{{ 'Logo-legerstock.jpg' | asset_url }}" alt="Legerstock Hendriks" class="logo-image">
      </a>
    </div>

    <div class="header-cart">
      <a href="/cart">Cart ({{ cart.item_count }})</a>
    </div>
  </div>
</header>

{% stylesheet %}
  .site-header {
    background: #fff;
    border-bottom: 1px solid #e6e6e6;
    padding: 20px 0;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-logo a {
    display: block;
    line-height: 0;
  }

  .logo-image {
    height: 60px;
    width: auto;
    display: block;
  }

  .header-cart a {
    text-decoration: none;
    color: #000;
    font-weight: 500;
  }

  .header-cart a:hover {
    color: #0066cc;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}
